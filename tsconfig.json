{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "removeComments": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"],
    "include": ["./src/**/*"]
}
